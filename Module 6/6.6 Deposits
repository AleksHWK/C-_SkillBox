#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "rus");
    cout << "-----Вклады------" << endl;
    
    int deposit; 
    cout << "Введите сумму вклада: ";
    cin >> deposit;
    if (deposit == 0 or deposit < 0) {
        cout << "Ошибка ввода данных!";
        return 1;
    }
    else {
        int interestRate;
        cout << "Введите процентную ставку (в процентах): ";
        cin >> interestRate;

        int desiredAmount;
        cout << "Введите желаемую сумму: ";
        cin >> desiredAmount;

        int temp = 0;

        while (deposit < desiredAmount) {
            deposit += (interestRate * deposit) / 100;
            temp++;
        }

        cout << "Придётся подождать: " << temp << " лет";
        return 0;
    }
}
