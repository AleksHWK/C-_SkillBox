#include <iostream>

using namespace std;


int main() {
    setlocale(LC_ALL, "rus");
    cout << "-----Слишком большие числа------" << endl;
    
    int score;
    cout << "Введите счёт: ";
    cin >> score;
    if (score < 0) {
        score *= -1;
    }
    int i = 1;
        while (score > i) {
            score /= 10;
            i++;
        }
        cout << "Кол-во цифр: " << i;
    return 0;
}
