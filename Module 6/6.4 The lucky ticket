#include <iostream>

using namespace std;


int main() {
    setlocale(LC_ALL, "rus");
    cout << "-----Счастливый билетик------" << endl;
    int ticketNumbers;
    cout << "Введите счастливый билет: ";
    cin >> ticketNumbers; 
    if (ticketNumbers < 100000 || ticketNumbers > 999999) {
        cout << "Ошибка! Введите 6-значное число" << endl;
        return 1;
    }
    int digits = 0, sum1 = 0, sum2 = 0;
    while (digits < 3 ) {
        sum2 += ticketNumbers % 10;
        ticketNumbers /= 10;
        digits++;
    }
    while (digits < 6) {
        sum1 += ticketNumbers % 10;
        ticketNumbers /= 10;
        digits++;
    }
    if (sum1 == sum2) {
        cout << "Счастливый билет!";
    }
    else {
        cout << "Не повезло!";
    }
 return 0;
}
