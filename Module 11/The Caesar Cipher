#include <iostream>
#include <string>
using namespace std;

string encrypt_caesar(string text, int shift ) {
    shift = shift % 26;
    if (shift < 0) shift += 26;
    for (int i = 0; i < text.size(); i++) {
        char simbol = text[i];
        if (simbol >= 'A' and simbol <= 'Z') {
            simbol = (simbol - 'A' + shift) % 26;
            text[i] = simbol + 'A';
        }
        else if (simbol >= 'a' and simbol <= 'z') {
            simbol = (simbol - 'a' + shift) % 26;
            text[i] = simbol + 'a';
        }
    }
    return text;
}


int main() {
    setlocale(LC_ALL, "rus");
    cout << "-----Шифр Цезаря-----" << endl;

    string text;
    cout << "Введите текст: ";
    getline(cin, text);

    int shift;
    cout << "Введите сдвиг: ";
    cin >> shift;

    

    cout << encrypt_caesar(text, shift);

    return 0;
}
