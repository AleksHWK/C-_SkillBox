#include <iostream>

using namespace std;


int main() {
    setlocale(LC_ALL, "rus");
    cout << "-----Коллекторы------" << endl;
    
    int score, credit;
    string name;
    cout << "Введите имя клиента: ";
    cin >> name;
    cout << "Введите баланс клиента: ";
    cin >> score;
    int i = 1;
    int deposit = 0;
        while (score < 0) {
            cout << "Внимание, нужно погасить задолжность! Текущая задолжность: "<< score << endl;
            cout << "Введите сумму: ";
            cin >> deposit;
            if (deposit < 0) cout << "Ошибка, у вас задолжность!" << endl; 
            else {
                score += deposit;
            }
        }
        cout << "Текущий баланс: " << score;
    return 0;
}
