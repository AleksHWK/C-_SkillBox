#include <iostream>

int main() {
  int priceProduct = 4000;
  int priceDelivery = 100;
  int discount = 500;
  int totalPrice = priceProduct + priceDelivery - discount;
  std::cout << "Цена товара: " << priceProduct << "\n"; 
  std::cout << "Цена доставки: " << priceDelivery << "\n";
  std::cout << "Общая цена с учетом скидки (" << discount << ") :" << totalPrice; 
}
