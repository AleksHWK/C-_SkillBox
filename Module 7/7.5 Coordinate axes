
#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "rus");
    cout << "-----Координатные оси!-----" << endl;
    for (int x = 0; x <= 20; x++) {
        for (int y = 0; y <= 50; y++) {
            if (x == 0 and y == 25) {
                cout << "^";
            }
            else if (x == 10 and y == 50) {
                cout << ">";
            }
            else if (x == 10 and y == 25) {
                cout << "+";
            }
            else if (x == 10) {
                cout << "-";
            }
            else if (y == 25) {
                cout << "|";
            }
            else {
                cout << " ";
            }
        }
        cout << endl;
    }
    return 0;
}
