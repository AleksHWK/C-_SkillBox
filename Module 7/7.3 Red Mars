#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "rus");
    cout << "-----Красный Марс!-----" << endl;
    int x = 7, y = 10;
    string movement;

    for (;;) {
        cout << "[Программа]: Марсоход находится на позиции " << x << ", " << y << ", введите команду (W A S D exit): ";
        cout << endl << "[Оператор]: ";
        cin >> movement;

        if (movement == "W") {
            if (y < 19) y++;
        }
        else if (movement == "A") {
            if (x > 0)  x--;
        }
        else if (movement == "S") {
            if (y > 0) y--;
        }
        else if (movement == "D") {
            if (x < 15) x++;
        }
        else if (movement == "exit") break;
        else cout << "Ошибка" << endl;
    }
    cout << "Симуляция завершена!";
    return 0;
}
