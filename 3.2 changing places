#include <iostream>

int main() {
	setlocale(LC_ALL, "Russian");
	std::cout << "Смена чисел, пфф, легко!"<< "\n\n";

	int a, b, c;

	std::cout << "Введите а: ";
	std::cin >> a;

	std::cout << "Введите b: ";
	std::cin >> b;

	std::cout << "\na: " << a << "\n";
	std::cout << "b: " << b << "\n";

	std::cout << "\nСмена элементов местами.\n";

	c = b;
	b = a;
	a = c;

	std::cout << "\na: " << a << "\n";
	std::cout << "b: " << b << "\n";
	std::cout << "\nЗадача решена!";
}
