#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "rus");
    cout << "-----Рамка!-----" << endl;

    int width, height;
    cout << "Введите ширину и высоту рамки: ";
    cin >> width >> height;

    for (int i = 0; height - 1 >= i; i++) {
        for (int j = 0; width - 1 >= j; j++) {
            if (i == 0 or i == height - 1) cout << "-";
            else if (j == 0 or j == width - 1) cout << "|";
            else cout << " ";
        }
        cout << endl;
    }

    return 0;
}
