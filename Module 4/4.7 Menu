#include <iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	cout << "Меню ресторана!\n";
	int day;
	cout << "Введите день недели (от 1 до 7): ";
	cin >> day;
	if (day == 1) {
		cout << "Меню сегодня (Понедельник): \n" << "Гороховый суп\n"; 
		cout << "Салат «Цезарь» с креветками \n" << "Куриная ножка с пюре\n" << "Морс\n";
	}
	else if (day == 2) {
		cout << "Меню сегодня (Вторник): \n" << "Борщ\n";
		cout << "Салат с крабовыми палочками \n" << "Мокороны по флотски\n" << "Сок\n";
	}
	else if (day == 3) {
		cout << "Меню сегодня (Среда): \n" << "Щи\n";
		cout << "Селедёка под шубой \n" << "Пельмени\n" << "Чай\n";
	}
	else if (day == 4) {
		cout << "Меню сегодня (Четверг): \n" << "Лапша\n";
		cout << "Салат из огурцов и помидоров \n" << "Картошка с грибами\n" << "Компот\n";
	}
	else if (day == 5) {
		cout << "Меню сегодня (Пятница): \n" << "Сырный суп\n";
		cout << "Салат с ананасом \n" << "Манты\n" << "Кофе\n";
	}else if (day == 6) {
		cout << "Меню сегодня (Суббота): \n" << "Окрошка\n";
		cout << "Салат из лосося \n" << "Мокороны с сыром\n" << "Квас\n";
	}else if (day == 7){
		cout << "Меню сегодня (Воскресенье): \n" << "Суп с фрикадельками\n";
		cout << "Оливье\n" << "Рис с курицей\n" << "Раф на кокосовом молоке с нотками ванили и корицы, в специальном фирменном станкане из золота, с настоящим круасаном из самой Франции!\n";
	}
	else {
		cout << "Ошибка, проверте данные!";
	}
}
