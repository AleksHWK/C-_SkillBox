#include <iostream>

int main(){
  int shiftDuration = 480;
  int orderTimeClient = 2;
  int orderTimeCashier = 4;
  int clientTotal = shiftDuration / (orderTimeClient + orderTimeCashier);
  std::cout << "Эта программа рассчитает, сколько клиентов успеет обслужить кассир за смену. \n";
  std::cout << "Введите длительность смены в минутах: " << shiftDuration << "\n";
  std::cout << "Сколько минут клиент делает заказ? " << orderTimeClient << "\n";
  std::cout << "Сколько минут кассир собирает заказ? " << orderTimeCashier << "\n";
  std::cout << "-----Считаем-----\n";
  std::cout << "За смену длиной " << shiftDuration << " минут кассир успеет обслужить " << clientTotal << " клиентов. \n";
  return 0;
  }
